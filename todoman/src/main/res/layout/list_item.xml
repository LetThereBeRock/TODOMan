<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp" >
    
    <TextView 
        android:id="@+id/itemTaskTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:textSize="24sp"/>
    
    <TextView 
        android:id="@+id/itemTaskDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/itemTaskTitle"
        android:layout_alignLeft="@+id/itemTaskTitle"/>

    <CheckBox
        android:id="@+id/itemTaskDone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toRightOf="@+id/itemTaskDescription"
        android:layout_below="@+id/itemTaskTitle"/>

</RelativeLayout>
